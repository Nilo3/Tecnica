{
    "openapi": "3.0.0",
    "info": {
        "title": "API REST para evaluación tecnica",
        "description": "API REST para evaluación tecnica",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080"
        }
    ],
    "components": {
        "schemas": {
            "User": {
                "type": "object",
                "required": ["name", "email", "password", "age"],
                "unique": ["email"],
                "properties": {
                    "name": { "type": "string", "description": "Nombre del usuario" },
                    "email": { "type": "string", "description": "Email del usuario" },
                    "password": { "type": "string", "description": "Password del usuario (minimo 8 caracteres)" },
                    "age": { "type": "number", "description": "Edad del usuario" }
                },
                "example": {
                    "name": "John Doe",
                    "email": "john.doe@example.com",
                    "password": "Pruebas123@",
                    "age": 25
                }
            },
            "Login": {
                "type": "object",
                "required": ["email", "password"],
                "properties": {
                    "email": { "type": "string", "description": "Email del usuario" },
                    "password": { "type": "string", "description": "Password del usuario" }
                },
                "example": {
                    "email": "john.doe@example.com",
                    "password": "Pruebas123@"
                }
            }
        },
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },
    "paths": {
        "/api/auth/create": {
            "post": {
                "summary": "Crear/Registrar un usuario",
                "description": "Crear/Registrar un usuario",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/User" }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Indica que el usuario se ha creado correctamente",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "user": {
                                            "name": "John Doe",
                                            "email": "john.doe@example.com",
                                            "age": 25,
                                            "password": "Pruebas123@",
                                            "id": "1234567890"
                                        },
                                        "token": "acces-token",
                                        "ok": true,
                                        "message": "Usuario creado correctamente"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/auth/login": {
           "post": {
                "summary": "Iniciar sesión",
                "description": "Iniciar sesión",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": { "$ref": "#/components/schemas/Login" }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Sesión iniciada.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "user": {
                                            "username": "georffrey",
                                            "name": "Georffrey",
                                            "id": "66cbfce4b907ffcfcaba3e7b"
                                        },
                                        "token": "access-token",
                                        "ok": true,
                                        "msg": "Ha iniciado sesión correctamente."
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Accesos denegado.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "example": {
                                        "ok": false,
                                        "msg": "Credenciales no válidas."
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/users/get-all-users": {
            "get": {
                "summary": "Obtener todos los usuarios",
                "description": "Obtener todos los usuarios",
                "parameters": [
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Número de página",
                        "required": false,
                        "schema": { "type": "number" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuarios obtenidos correctamente",
                        "content": {
                            "application/json": {
                                "schema": { "$ref": "#/components/schemas/User" }
                            }
                        }
                    },
                    "404": {
                        "description": "No se encontraron usuarios",
                        "content": {
                            "application/json": { "example": { "ok": false, "msg": "No se encontraron usuarios" } }
                        }
                    }
                }
            }
        },
        "/api/users/get-user-by-id/{id}": {
            "get": {
                "summary": "Obtener un usuario por su ID",
                "description": "Obtener un usuario por su ID",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario a obtener",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario obtenido correctamente",
                        "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
                    },
                    "404": {
                        "description": "No se encontró el usuario",
                        "content": { "application/json": { "example": { "ok": false, "msg": "No se encontró el usuario" } } }
                    }
                }
            }
        },
        "/api/users/update-user/{id}": {
            "put": {
                "summary": "Actualizar un usuario",
                "description": "Actualizar un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario a actualizar",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
                },
                "responses": {
                    "200": { "description": "Usuario actualizado correctamente", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
                    "404": { "description": "No se encontró el usuario", "content": { "application/json": { "example": { "ok": false, "msg": "No se encontró el usuario" } } } }
                }
            }
        },
        "/api/users/deactivate-user/{id}": {
            "put": {
                "summary": "Desactivar un usuario",
                "description": "Desactivar un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario a desactivar",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": {
                    "200": { "description": "Usuario desactivado correctamente", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } }
                }
            }
        },
        "/api/users/activate-user/{id}": {
            "put": {
                "summary": "Activar un usuario",
                "description": "Activar un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario a activar",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": { "200": { "description": "Usuario activado correctamente", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } } }
            }
        },
        "/api/users/delete-user/{id}": {
            "delete": {
                "summary": "Eliminar un usuario",
                "description": "Eliminar un usuario",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID del usuario a eliminar",
                        "required": true,
                        "schema": { "type": "string" }
                    }
                ],
                "responses": { "200": { "description": "Usuario eliminado correctamente", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } } }
            }
        }
    },
    "security": [
        {
            "bearerAuth": []
        }
    ]
}